<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/add_bank_background"
        android:padding="16dp"
        android:src="@drawable/ic_bank" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/add_bank_dialog"
        android:textColor="@color/brownishGrey"
        android:textSize="@dimen/text_size_sub_heading_2" />

    <Button
        android:id="@+id/btn_add_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:background="@android:color/transparent"
        android:text="Add a Bank"
        android:textColor="?attr/colorPrimary"
        android:textSize="@dimen/text_size_sub_heading_1"
        android:textStyle="bold" />

</LinearLayout>